<project default="compile" basedir=".">

  <!-- クラスパスの定義 -->
  <path id="project.class.path">
    <pathelement location="../../.." />
  </path>

  <!-- ターゲットの定義 -->

  <!-- clean -->
  <target name="clean" description="ビルド環境のクリア">
    <delete>
      <fileset dir=".">
        <include name="*.class" />
      </fileset>
    </delete>
  </target>

  <!-- javac -->
  <target name="compile" description="コンパイル">
    <javac debug="on">
      <classpath refid="project.class.path" />
      <include name="*.java" />
      <src path="." />
    </javac>
  </target>

</project>

